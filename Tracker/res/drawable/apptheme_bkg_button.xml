<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item android:state_pressed="true">
    	<shape>
        	<stroke 
        	    android:width="1dp" 
        	    android:color="@color/c10" />
        	<solid 
        	    android:color="@color/c11"/>
        	<padding 
        	    android:left="12dp" 
        	    android:top="9dp" 
        	    android:right="12dp"
            	android:bottom="9dp" />
    	</shape>
	</item>
	
	<item android:state_enabled="false">
    	<shape>
        	<stroke 
        	    android:width="1dp" 
        	    android:color="@color/c12" />
        	<solid 
        	    android:color="@color/c13"/>
        	<padding 
        	    android:left="12dp" 
        	    android:top="9dp" 
        	    android:right="12dp"
            	android:bottom="9dp" />
    	</shape>	    
	</item>
	
	<item>
    	<shape>
        	<stroke 
        	    android:width="1dp" 
        	    android:color="@color/c10" />
        	<solid 
        	    android:color="@color/c12"/>
        	<padding 
        	    android:left="12dp" 
        	    android:top="9dp" 
        	    android:right="12dp"
            	android:bottom="9dp" />
    	</shape>
	</item>
</selector>